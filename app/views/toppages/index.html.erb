<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <div class="container">
    <%= form_with(model: @boxpost) do |f| %>
    <div class="row">
        <div class="col-2">
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="col-4 align-self-end">
          <%= f.submit '投稿', class: 'btn btn-primary w-25' %>
        </div>
    <% end %>
    </div>
  </div>
  <%= render 'boxposts/boxposts', boxposts: @boxposts %>
  <div class="container">
    <div class="row">
      <div class="col-2">
        <p>最小値：<%=@lowest%> </p>
      </div>
      <div class="col-2">
        <p>第１四分位数：<%=@q1%> </p>
      </div>
      <div class="col-2">
        <p>中央値：<%=@median%> </p>
      </div>
      <div class="col-2">
        <p>第３四分位数：<%=@q3%> </p>
      </div>
      <div class="col-2">
        <p>最大値：<%=@highest%> </p>
      </div>
    </div>
  </div>
  <h1>気温の変化</h1>
  <%= high_chart("sample", @graph) %>
  
<% else %>
<div class="bg-secondary p-3 p-sm-5 my-4 rounded">
  <div class="text-center text-white">
    <h1>箱ひげ図作成アプリ</h1>
    <%= link_to '新規登録!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>
